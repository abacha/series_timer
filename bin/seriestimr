#!/usr/bin/env ruby

require 'bundler/setup'
require 'net/http'
require 'yajl'
require 'date'
require "optparse"
require_relative '../lib/seriestimr'

begin 
  SeriesTimr::Application.new(ARGV).run
rescue OptionParser::InvalidOption => err
  abort "seriestimr: #{err.message}\nusage: seriestimr [-lac] [serie1 serie2 ...]"
rescue SeriesTimr::InvalidSerieException
  abort "seriestimr: invalid serie"
end
